# Task 1: 
num = int(input("Enter a number: "))
def is_prime(n):
    if n <= 1:
        return False
    for i in range(2, n):
        if n % i == 0:
            return False
    return True
if is_prime(num):
    print(num, "is a Prime number.")
else:
    print(num, "is NOT a Prime number.")

print("Prime numbers up to", num, "are:")
for i in range(2, num + 1):
    if is_prime(i):
        print(i, end=" ")
